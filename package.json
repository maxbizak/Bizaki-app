{
    "name": "bizaki",
    "version": "1.0.0",
    "productName": "BIZAKI",
    "appId": "online.bizaki.app",
    "description": "Bizaki voice chat desktop app",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dist": "electron-builder"
    },
    "author": "Bizaki",
    "license": "ISC",
    "type": "commonjs",
    "devDependencies": {
        "electron": "^40.1.0",
        "electron-builder": "^26.7.0"
    },
    "dependencies": {
        "electron-updater": "^6.7.3",
        "electron-log": "^5.3.0"
    },
    "build": {
        "appId": "online.bizaki.app",
        "productName": "BIZAKI",
        "files": [ "**/*" ],
        "win": {
            "target": "nsis-web"
        },
        "nsisWeb": {
            "artifactName": "BIZAKI-Setup.exe"
        },
        "publish": [
            {
                "provider": "github",
                "owner": "maxbizak",
                "repo": "Bizaki-app"
            }
        ]
